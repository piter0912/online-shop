<%- include('../../shared/includes//head',{ pageTitle: 'Your cart products' }) %>
<link rel="stylesheet" href="/styles/cart.css">
<script src="/scripts/cart-item-management.js" defer></script>
</head>
<body>
    <%- include('../../shared/includes/header') %>
    <main>
        <h1>Your Cart</h1>
        <ul id="cart-items">
          <% for (const cartItem of locals.cart.items) { %>
            <li>
                <%- include('includes/cart-item', {item: cartItem}) %>
            </li>          
            <% } %>
        </ul> 
        <form id="cart-total" data-productid="<%= item.product.id %>" data-csrf="<%= locals.csrfToken %>">
            <p>Total: $<%= locals.cart.totalPrice.toFixed(2) %></p>
            <button class="btn">Buy products</button>
        </form>
    </main>
<%- include('../../shared/includes/footer') %>
