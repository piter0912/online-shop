<%- include('../../shared/includes//head',{ pageTitle: 'Add new product' }) %>
<link rel="stylesheet" href="/styles/forms.css">
</head>
<body>
    <%- include('../../shared/includes/header') %>
    <main>
        <h1>Add new product (Admin)</h1>
        <form action="" method="">
            <p>
                <label for="title">Title</label>
                <input type="text">
            </p>
            <p>
                <label for="image">Image</label>
                <input type="file" id="image" name="image" accept="image/png,image/jpg">
            </p>
            <p>
                <label for="summary">Summary</label>
                <input type="text" id="summary" name="summary" required maxlength="250">
            </p>
            <p>
                <label for="price">Price</label>
                <input type="number" id="price" name="price" required min="0.01" step="0.01">
            </p>
            <p>
                <label for="description">Description</label>
                <textarea id="description" name="description" rows="7" required></textarea>                
            </p>
            <p>
                <button class="btn btn-alt" type="reset">Reset</button>
                <button class="btn">Save</button>
            </p>

        </form>

    </main>
<%- include('../../shared/includes/footer') %>
